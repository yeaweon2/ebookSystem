<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	<!-- 전체 레이아웃 -->	
	<definition name="layout" template="/WEB-INF/views/tiles/layout.jsp">
		<put-attribute name="header" value="/WEB-INF/views/tiles/header.jsp" />
		<put-attribute name="body" value="" />
		<put-attribute name="footer" value="/WEB-INF/views/tiles/footer.jsp" />
	</definition>
	
	<!-- body 설정 -->
	<definition name="*/*" extends="layout"  >
		<put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp" />
	</definition>
	
	<definition name="*/*/*" extends="layout"  >
		<put-attribute name="body" value="/WEB-INF/views/{1}/{2}/{3}.jsp" />
	</definition>	
	
	<!-- Tiles 적용제외 -->
	<definition name="noTiles" template="/WEB-INF/views/tiles/noTiles.jsp">
		<put-attribute name="body" value="/WEB-INF/views/tiles/noTiles.jsp" />
	</definition>
	
	<definition name="home" template="noTiles" >
		<put-attribute name="body" value="/WEB-INF/views/{1}.jsp" />
	</definition>
</tiles-definitions>